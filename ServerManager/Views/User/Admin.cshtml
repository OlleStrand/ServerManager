@model IEnumerable<ServerManager.Models.UserModel>

@{
    ViewBag.Title = "Admin";
}
<div class="px-5">
    <div class="container-fluid shadow py-3">
        <h1 class="display-4 mt-3">Admin Panel</h1>
        <hr />
        <div class="row my-lg-2 my-sm-1">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Amount of Servers
                    </div>
                    <div class="card-body">
                        <canvas id="serverChart" aria-label="serverChart" role="img"></canvas>
                        <p class="mt-1 text-center">1 / 10 Servers Active</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Amount of Accounts
                    </div>
                    <div class="card-body">
                        <canvas id="accountChart" aria-label="accountChart" role="img"></canvas>
                        <p class="mt-1 text-center">7 / 30 Accounts</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Best Performing Server
                    </div>
                    <div class="card-body">
                        <canvas id="bestServerChart" aria-label="bestServerChart" role="img"></canvas>
                        <p class="mt-1 text-center">47 Players Average of 64 Maximum</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-lg-2 my-sm-1">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        Manage Users
                    </div>
                    <div class="card-body">
                        <div class="text-left mb-2">
                            @Html.ActionLink("Create User", "CreateUser", "User", new { }, new { @class = "btn btn-dark" })
                        </div>
                        <table class="table table-striped table-responsive-lg">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.UserID)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.AdminLevel)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.IsBanned)
                                </th>
                                <th>Actions</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminLevel)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsBanned)
                                    </td>
                                    <td>
                                        <div class="dropright">
                                            <a class="btn btn-info" href="#" role="button" id="actionDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-bars"></i>
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="actionDropdown">
                                                @Html.ActionLink("Edit", "Edit", "User", new { id = item.UserID }, new { @class = "dropdown-item" })
                                                <div class="dropdown-divider"></div>
                                                @Html.ActionLink("Details", "Details", "User", new { id = item.UserID }, new { @class = "dropdown-item" })
                                                <div class="dropdown-divider"></div>
                                                @Html.ActionLink("Delete", "Delete", "User", new { id = item.UserID }, new { @class = "dropdown-item" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript" src="~/Scripts/custom/AdminChart.js"></script>
}

