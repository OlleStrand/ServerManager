@model UserPlatform.Models.UserModel

@{
    ViewBag.Title = "Login";
}

<div class="container p-5 my-5" style="background:#d7d8d9 !important;">
    <h1 class="display-4 mb-4">Login</h1>

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Username)
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Username..." } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter Password..." })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.ValidationMessage("noCredentials", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="LogIn" class="btn btn-primary" />
            <span class="ml-3">@Html.ActionLink("Forgot Password?", "ResetPassword", "User")</span>
        </div>
    }
</div>